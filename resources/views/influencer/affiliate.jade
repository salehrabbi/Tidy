
extends ../layouts/app.jade

block title
  title Influencer -  Affliate

block vars
  - var bodyClass = 'influencer';

block main
  main.d-flex.justify-content-center.align-items-center 
    .main-wraper
      include ../partials/aside.jade
      form.influencer-wraper(action="#")
        .affiliate.influencer-space.pb-3(data-simplebar)
          .affiliate-form(style="max-width: 754px;")
            label 
              span Affliate Link
              p.mb-3 Share this link with friends and followers to track their purchases and receives a commission
            .input-text
              input(type="text" value="https://link.com/aff/ejhfkjlhwekjhfhkjweh")  
              a.button.m-sm-0.mr-2.mb-2(href="#") Copy
              a.button(href="#") Refresh 
            .input-text.mt-3
              label.d-flex.align-items-center.flex-sm-nowrap.flex-wrap
                span.text-nowrap.mr-2 Short url
                input(type="text" value="https://link.com/aff/ejhfkjlhwekjhfhkjweh")  
              a.button.m-sm-0.mr-2.mb-2(href="#") Copy
              a.button(href="#") Refresh
          label.mt-5.mb-2
            span Activity    
          ul.history-list.p-0.m-0.list-unstyled
            - for(var x = 1; x<40; x++)
              li
                div 
                  p.font-weight-bold Click
                  p.m-0
                    <i class="fas fa-tag mr-3"></i>
                    span.font-weight-bold.text-decoration-underline Men’s Jeans
                div
                  p.font-weight-bold Date
                  p.m-0 20/01/2020
                div
                  p.font-weight-bold Referrer/Source
                  p.m-0 Instagram
                .price
                  p.font-weight-bold.color-black Rewards
                  p.m-0.font-weight-bold + 10% ( £20 )

        .save-changes.d-flex.justify-content-end.align-items-center
          button(type="submit") Save changes           