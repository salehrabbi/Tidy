extends layouts/app.jade

block title
  title Home

block vars
  - var bodyClass = 'background-white';  

block main
  main.dashboard.overflow-hidden
    .container
      .revenue-stat.mb-5
        .row
          .col-lg-4.mb-5.mb-lg-0
            .item.position-relative.d-flex.flex-column.justify-content-center
              .title.mb-3 Total Revenue
              .number £3,050
              .up
                img(src="dist/images/arrow-up.png" alt="")
                |  20%
              .canvasContainer
                canvas#myChart(width='200' height='200')  
            .pt-lg-3
              button.w-100.background-black.mt-5 Upload products 
          .col-lg-4.mb-5.mb-lg-0
            .item.position-relative.d-flex.flex-column.justify-content-center
              .title.mb-3 Products Sold
              .number 1,050
              .up
                img(src="dist/images/arrow-up.png" alt="")
                |  20%
              .canvasContainer
                canvas#myChart_2(width='200' height='200')  
            .pt-lg-3
              button.w-100.background-black.mt-5 Manage products
          .col-lg-4
            .item.position-relative.d-flex.flex-column.justify-content-center
              .title.mb-3 Products Online
              .number 200
              .up
                img(src="dist/images/arrow-up.png" alt="")
                |  20%
              .canvasContainer
                canvas#myChart_3(width='200' height='200')  
            .pt-lg-3
              button.w-100.background-black.mt-5 View sales & details             
        .row
          .col-12.mt-5
            label
              span.mb-3 Social Stats
          .col-lg-4.mb-5.mb-lg-0
            .item.position-relative.d-flex.flex-column.justify-content-center
              .title.mb-3 Followers
              .number 3,050
              .up
                img(src="dist/images/arrow-up.png" alt="")
                |  20%
              .canvasContainer
                canvas#myChart_4(width='200' height='200')
          .col-lg-4.mb-5.mb-lg-0
            .item.position-relative.d-flex.flex-column.justify-content-center
              .title.mb-3 Likes
              .number 32k
              .up
                img(src="dist/images/arrow-up.png" alt="")
                |  20%
              .canvasContainer
                canvas#myChart_5(width='200' height='200')
          .col-lg-4.mb-5.mb-lg-0
            .item.position-relative.d-flex.flex-column.justify-content-center
              .title.mb-3 Shares
              .number 1,050
              .up
                img(src="dist/images/arrow-up.png" alt="")
                |  20%
              .canvasContainer
                canvas#myChart_6(width='200' height='200')                
      .row
        .col-xl-8
          .transaction-history
            .header-history
              .row.align-items-center
                .col-sm-6.mb-3.mb-sm-0.text-center.text-sm-left
                  label
                    span.mb-0 Transaction History
                .col-sm-6
                  .input-select.ml-sm-auto.mx-auto.mr-sm-0(style="max-width: 300px")   
                    .date-select
                      select.selectpicker.form-control(title="All")
                        - for(d=1; d<32; d++)
                          option= d
            .content-wraper
              div(data-simplebar)
                .item
                  .price.align-items-center
                    .avator.position-relative
                      img(src="dist/images/placeimg_64_64_arch.jpg" alt="") 
                      .paid-wraper
                        .pending.paid.font-weight-bold.d-inline-block Pending 
                    .text
                      p.mb-lg-2.mb-0 Customer N.
                      p.mb-0.font-weight-bold.text-right.text-lg-left £1000.00
                  .product
                    .name.font-weight-bold Product
                    .quantity.font-weight-bold Quantity
                    .product-id.font-weight-bold 930-29
                    .title Iphone XR 250GB Black/Gold 
                    .quantity-number 02 
                - for(x=1; x<10; x++)
                  .item
                    .price.align-items-center
                      .avator.position-relative 
                        img(src="dist/images/placeimg_64_64_arch.jpg" alt="") 
                        .paid-wraper
                          .paid.font-weight-bold.d-inline-block Paid 
                      .text
                        p.mb-lg-2.mb-0 Customer N. 
                        p.mb-0.font-weight-bold.text-right.text-lg-left £1000.00
                    .product
                      .name.font-weight-bold Product
                      .quantity.font-weight-bold Quantity
                      .product-id.font-weight-bold 930-29
                      .title Iphone XR 250GB Black/Gold 
                      .quantity-number 02 
        .col-xl-4
          .locations
            .header-location.d-flex.align-items-center
              label
                span.mb-0 Sales by Location     
            .content-wraper
              .title.font-weight-bold Top 10
              .progress-wraper
                div(data-simplebar)
                  - for(y=1; y<20; y++)
                    .mb-4.item
                      .row.mb-2
                        .col-md-7
                          p.mb-0.font-weight-bold United Kingdom
                        .col-md-5.text-right
                          p.mb-0.font-weight-bold 50%  
                      .progress
                        .progress-bar(role='progressbar' aria-valuenow='50' style="width: 50%" aria-valuemin='0' aria-valuemax='100')

      .mt-4.out-going
        .header-history
          .row.align-items-center
            .col-sm-6.mb-3.mb-sm-0.text-center.text-sm-left
              label
                span.mb-0 Outgoing Products
            .col-md-6
              .input-select.ml-sm-auto.mx-auto.mr-sm-0(style="max-width: 300px")   
                .date-select
                  select.selectpicker.form-control(title="Needs Shipping")
                    - for(d=1; d<32; d++)
                      option= d
        .content-wraper
          div(data-simplebar) 
            - for(x=1; x<10; x++)
              .item
                .price.align-items-center
                  .avator.position-relative 
                    img(src="dist/images/placeimg_64_64_arch.jpg" alt="") 
                  .text.text-right.text-lg-left
                    p.mb-2 #8347984 
                    p.mb-0.font-weight-bold £1000.00
                .product
                  .title
                    p.font-weight-bold.mb-lg-3.mb-0 Product
                    .d-flex 
                      .p.text-nowrap.font-weight-bold.mr-3 930-29
                      .p Iphone XR 250GB Black/Gold
                  .status
                    p.mb-0.font-weight-bold.mb-lg-3 Status
                    .text-right.text-lg-left
                      .paid.d-inline-block.pending.font-weight-bold Needs Shipping 
                  .address
                    p.mb-lg-3.mb-0.font-weight-bold Address
                    p.mb-0 Address Line 1, Line 2, Country, Post Code/ Zip Code, Address Line 1, Line 2, Country     

